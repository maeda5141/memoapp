<div class="container">
<div class="edit_article_area">
<p><%= form_for (@article) do |f| %></p>
<p>メモを編集してください</p>
<p><%= f.label :title, "タイトル："%><%= f.text_field :title, placeholder: "必須",  value: @article.title, required: true %></p>
<p><%= f.label :body, "本文"%></p>
<p><%= f.text_area :body, placeholder: "必須",  value: @article.body, required: true %></p>
<p><%= f.label :public, "公開する"%><%= f.check_box :public, {}, 1, 0 %></p>
<p><%= f.submit "送信", method: :patch, class: "article_submit_button" %></p>
<% end %>
</div>
  </div>