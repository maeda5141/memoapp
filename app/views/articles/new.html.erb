<div class="container">
<div class="new_article_page">
<%= form_for (@article) do |f| %>
<p>メモを書いて投稿してください</p>
<p><%= f.label :title, "タイトル："%><%= f.text_field :title, placeholder: "必須",  required: true %></p>
<p><%= f.label :body, "本文"%></p>
<p><%= f.text_area :body, placeholder: "必須",  required: true %></p>
<p><%= f.label :public, "公開する"%><%= f.check_box :public, {}, 1, 0 %></p>
<p><%= f.submit "投稿する", class: "article_submit_button"%></p>
<% end %>
</div>
  </div>