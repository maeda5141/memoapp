<div class="container user_page">
<h2>新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user_input_form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input_form", placeholder: "必須" %>
    </div>


  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_form", placeholder: "必須" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上）</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "input_form", placeholder: "必須" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認用パスワード" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input_form", placeholder: "必須" %>
  </div>

  <div class="actions signup_button">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
