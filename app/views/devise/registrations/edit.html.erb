<div class="container user_page">
  <h2>登録情報の編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "user_input_form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前" %><i>(必須)</i><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input_form" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><i>(必須)</i><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_form" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "パスワード" %> <i>(変更を希望する方のみ)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: "input_form" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認用パスワード" %><i>(変更を希望する方のみ)</i><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上", class: "input_form" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "現在のパスワード" %> <i>(必須)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input_form" %>
    </div>


    <div class="actions">
      <%= f.submit "更新する", class: "user_update_button" %>
      <%= link_to :back, class: "actions__back_button" do %>
          戻る
      <% end %>
    </div>
  <% end %>

  <div class="user_page_footer">
    <p class="user_delete_message">アカウントを削除される方はこちら</p>
    <p>
      <%= button_to "アカウントを削除", registration_path(resource_name),class: "user_delete_button", data: { confirm: "Are you sure?" }, method: :delete %>
    </p>
  </div>

</div>